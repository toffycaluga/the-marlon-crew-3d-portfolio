<div class="three-wrapper">
  <canvas id="three-canvas"></canvas>
</div>

<style>
  .three-wrapper {
    width: 100vw;
    height: 100vh;
    margin: 0;
    padding: 0;
    overflow: hidden;
  }

  #three-canvas {
    width: 100%;
    height: 100%;
    display: block;
  }
</style>

<script>
  import { initThreeScene } from '@/three/initScene.js'; // o '../three/initScene.js' si no usas alias

  if (typeof window !== 'undefined') {
    window.addEventListener('DOMContentLoaded', () => {
      const canvas = document.getElementById('three-canvas');
      if (canvas) {
        initThreeScene(canvas);
      }
    });
  }
</script>
